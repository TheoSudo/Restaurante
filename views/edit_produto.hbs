<h1>Editar Produto: {{produto.nome}}</h1>

<form action="/produtos/edit/{{produto.id}}" method="POST" class="form-container form-produto">
  <input type="hidden" name="id" value="{{produto.id}}">

  <label for="nome">Nome:</label>
  <input type="text" id="nome" name="nome" value="{{produto.nome}}" required>

  <label for="preco">Preço:</label>
  <input type="number" id="preco" name="preco" step="0.01" value="{{produto.preco}}" required>

  <button type="submit" class="button-save">Salvar Alterações</button>
  <a href="/produtos" class="button-cancel">Cancelar</a>
</form>

<p>
  <a href="/produtos" class="button-voltar">Voltar para a lista de produtos</a>
</p>