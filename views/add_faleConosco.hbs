<h1>Formulário de Sugestões</h1>

<form action="/faleConosco/new" method="POST" class="form-container form-sugestao">
  <label for="nome">Nome:</label>
  <input type="text" id="nome" name="nome" required>

  <label for="data">Data:</label>
  <input type="date" id="data" name="data" required>

  <label for="email">E-mail:</label>
  <input type="email" id="email" name="email" required>

  <label for="mensagem">Sugestões:</label>
  <textarea id="mensagem" name="mensagem" required rows="5"></textarea>

  <button type="submit" class="button-save">Enviar</button>
  <a href="/faleConosco" class="button-cancel">Cancelar</a>
</form>

